---
import Hello from "../components/Hello.astro";
import { Navbar } from "../components/Navbar";
import MainLayout from "../layouts/MainLayout.astro";
import Footer from "../components/Footer.astro";
---

<MainLayout title="Kaiden.dev" , description="This is home page">
  <Navbar client:load />
  <section class="flex p-50">
    <div class="container mx-auto justify-items-center">
      <!-- Greeting -->
      <div class="mb-2">
        <span id="typed" class="text-20 sm:text-3xl text-gray-400"></span>
      </div>

      <!-- Nama -->
      <h1 class="flex text-center font-bold text-white text-3xl sm:text-5xl">
        <span class="flex sm:text-5xl font-light text-gray-300 pr-3">
          I'm
        </span>
        Indra
      </h1>

      <!-- Subtitle -->
      <p class="mt-2 text-center text-xl sm:text-lg text-[#a0a0a0]">
        Full Stack Web Developer.
      </p>

      <!-- Button -->
      <div class="flex justify-center mt-6">
        <a
          href="/about"
          class="rounded-xl py-2 px-3 text-m text-black bg-white hover:text-[#b8b8b8] transition duration-300"
          >Discover</a
        >
      </div>
    </div>
  </section>

  <script>
    import Typed from "typed.js";

    new Typed("#typed", {
      strings: ["Assalamu'alaiakum,", "Hola,", "Hello,", "こんにちは,"],
      typeSpeed: 80,
      backSpeed: 50,
      loop: true,
    });
  </script>
  <Footer />
</MainLayout>
